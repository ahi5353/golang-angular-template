{
  "name": "Go & Angular Devcontainer",
  "build": {
    "dockerfile": "Dockerfile"
  },
  // Set the workspace folder to /workspace.
  "workspaceFolder": "/workspace",
  // Mount the local workspace folder to /workspace in the container.
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "angular.ng-template"
      ]
    }
  },
  "forwardPorts": [
    8080,
    4200
  ],
  "postCreateCommand": "cd frontend && npm install && cd ../backend && go mod tidy",
  "remoteUser": "vscode"
}
