{
  "name": "Go & Angular Devcontainer",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "workspaceFolder": "/workspace",
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "angular.ng-template"
      ]
    }
  },
  "forwardPorts": [
    8080,
    4200
  ],
  "postCreateCommand": "go mod tidy",
  "remoteUser": "vscode"
}
